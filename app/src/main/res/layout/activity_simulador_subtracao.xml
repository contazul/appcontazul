<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SimuladorSubtracaoActivity">


    <TextView
        android:id="@+id/textView_funcionalidade7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:text="@string/activitySimulador_Funcionalidade"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_SaldoAtual"
        android:text="@string/activitySimulador_TextViewSaldoAtualSimulado"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewValordoSaldoAtual"
        android:text="@string/activitySimulador_TextViewValorFormatado"
        android:layout_gravity="center"
        android:layout_marginTop="7sp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_TotalAdicionadoALista"
        android:text="@string/activitySimulador_TextViewTotalAdicionadoALista"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewValorTotalAdicionadoALista"
        android:text="@string/activitySimulador_TextViewValorFormatado"
        android:layout_gravity="center"
        android:layout_marginTop="7sp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editText_DescricaoDaSubtracao"
        style="@style/StyledTilEditTextTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:hint="@string/activitySimulador_EditTextDescricaoSubtracao"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE58"
        android:layout_marginStart="7sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ValorDaSubtracao"
        android:text="@string/activitySimulador_TextViewValorFormatado"
        android:layout_marginStart="7sp"
        android:layout_marginTop="8sp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/editText_ValorDaSubtracao"
        style="@style/StyledTilEditTextTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="@string/activitySimulador_EditTextValorDaSubtracao"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE59"
        android:layout_marginStart="7sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="10sp"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroup_prioridade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_Prioridade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:text="@string/activitySimulador_TextViewPrioridade"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/button_Alta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alta"
            android:textColor="#8B8989" />

        <RadioButton
            android:id="@+id/button_Baixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baixa"
            android:textColor="#8B8989" />
    </RadioGroup>
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button_Conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="@color/colorPrimary"
        android:text="@string/activitySubtracaodeSaldo_button"
        android:textColor="#FFF"
        />





</LinearLayout>