<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SubtracaoDeSaldoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_funcionalidade3"
        android:text="@string/activitySubtracaodeSaldo_funcionalidade"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_menu"
        app:layout_constraintTop_toBottomOf="@+id/textView_funcionalidade3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/activityCentral_buttonMenu"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:onClick="contralMostrarMenu"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_DescricaoMovimentacao"
        style="@style/editText"
        android:hint="@string/activitySubtracaodeSaldo_editText_DescricaoMovimentacao"
        android:width="280dp"
        app:layout_constraintTop_toTopOf="@id/button_menu"
        app:layout_constraintBottom_toBottomOf="@+id/button_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE28"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/editText_DescricaoMovimentacao"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="10sp"
        android:textSize="15sp"
        android:textColor="#FF0000"
        />

    <EditText
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ValorDaMovimentacao"
        style="@style/editText"
        android:hint="@string/activitySubtracaodeSaldo_editText_ValorDaMovimentacao"
        android:width="280dp"
        app:layout_constraintTop_toTopOf="@id/textView_RE28"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_valorFormatado"
        android:text="@string/activitySubtracaodeSaldo_textValorFormatado"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@+id/editText_DescricaoMovimentacao"
        app:layout_constraintBottom_toBottomOf="@+id/editText_DescricaoMovimentacao"
        app:layout_constraintLeft_toLeftOf="@+id/editText_ValorDaMovimentacao"
        android:layout_marginTop="140sp"
        android:layout_marginStart="210sp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE29"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/editText_ValorDaMovimentacao"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="10sp"
        android:textSize="15sp"
        android:textColor="#FF0000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_SaldodaConta"
        android:text="R$ 0,00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_RE29"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="5sp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Prioridade"
        android:text="@string/activitySubtracaodeSaldo_textView_Prioridade"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/textView_SaldodaConta"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30sp"
        android:layout_marginStart="5sp"
        android:textColor="@color/colorAccent"
        />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/textView_SaldodaConta"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="230dp"
        > <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_Alta"
        android:text="Alta"
        android:onClick="onRadioButtonClicked"
        /> <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Baixa"
        android:text="Baixa"
        android:onClick="onRadioButtonClicked"
        />
    </RadioGroup>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_InserirMovimentacao"
        android:text="@string/activitySubtracaodeSaldo_button"
        app:layout_constraintTop_toTopOf="@id/textView_Prioridade"
        app:layout_constraintRight_toRightOf="@+id/editText_DescricaoMovimentacao"
        android:layout_marginTop="30dp"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:onClick="buttonInserirMovimentacao"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/button_InserirMovimentacao"
        android:layout_marginTop="380dp"

        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listaSaldoConta"

            />
    </LinearLayout>






</android.support.constraint.ConstraintLayout>