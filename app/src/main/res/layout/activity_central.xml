<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CentralActivity"
    android:paddingBottom="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_funcionalidade"
        android:text="@string/activityCentral_funcionalidade"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_central_statusDescricao"
        android:text="@string/activityCentral_status"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="30sp"
        android:textSize="25sp"
        android:textColor="#696969"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_statusConta"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        style="@style/editText"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_central_status"
            android:text="Indefinido"
            android:layout_marginTop="10sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/activityCentral_aviso01"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:textColor="#696969"
            android:textSize="15sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Econômia atual:"
        android:textSize="25sp"
        android:textColor="#696969"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_economia"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        style="@style/editText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor economizado por mês:"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#696969"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EM DES"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Percentual economizado:"
            android:textSize="20sp"
            android:textColor="#696969"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginTop="10sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EM DES"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_saldo"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        style="@style/editText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo atual:"
            android:textSize="20sp"
            android:textColor="#696969"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_central_saldo"
            android:text="R$400.00"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"

            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gasto financeiro:"
        android:textSize="25sp"
        android:textColor="#696969"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_contasPagar"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        style="@style/editText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total em dívidas de baixa prioridade:"
            android:textSize="20sp"
            android:textColor="#696969"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_central_totalDividasBaixaPrioridade"
            android:text="EM DES"
            android:textSize="35sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total geral:"
            android:textSize="20sp"
            android:textColor="#696969"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_central_totalDividasGeral"
            android:text="EM DES"
            android:textSize="35sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acesse contas á pagar para uma nova inclusão ou visualizar a lista atual"
            android:textSize="15sp"
            android:textColor="#696969"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_subtracaoSaldo"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        style="@style/editText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total em subtração de saldo de baixa prioridade referente ao mês atual:"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="30sp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#696969"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_central_totalSubtracaoSaldoBaixaPrioridade"
            android:text=""
            android:textSize="35sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total geral:"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="30sp"
            android:textSize="20sp"
            android:textColor="#696969"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_central_totalSubtracaoSaldoGeral"
            android:text=""
            android:textSize="35sp"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acesse subtração de saldo para uma nova inclusão ou visualizar a lista atual"
            android:textSize="15sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="30sp"
            android:textColor="#696969"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lucro financeiro:"
        android:textSize="25sp"
        android:textColor="#696969"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_beneficioMensal"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        style="@style/editText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total em benefício mensal"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="30sp"
            android:textSize="20sp"
            android:textColor="#696969"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_central_totalBeneficioMensal"
            android:text=""
            android:textSize="35sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acesse lucro mensal para uma nova inclusão ou visualizar a lista atual"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="30sp"
            android:textSize="15sp"
            android:textColor="#696969"
            />
        </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_somaSaldo"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        style="@style/editText"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total em soma de saldo referente ao mês atual:"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="30sp"
            android:textSize="20sp"
            android:textColor="#696969"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_central_totalSomaSaldo"
            android:text=""
            android:textSize="35sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acesse soma de saldo para uma nova inclusão ou visualizar a lista atual"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="30sp"
            android:textSize="15sp"
            android:textColor="#696969"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>