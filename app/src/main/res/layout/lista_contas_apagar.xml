<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout01"
        android:paddingBottom="5dp"
        >

        <TextView
            android:id="@+id/textView_descricaoDaConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="teste"
            android:textSize="15sp"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_valorDaConta"
            android:text="teste"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Prioridade"
            android:text="teste"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Data"
            android:text="teste"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Parcela"
            android:text="teste"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/button_Pagar"
                android:background="@color/colorPrimary"
                android:text="@string/activityContasAPagar_ButtonPagar"
                android:textColor="#FFF"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:onClick="buttonPagar"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/button_Excluir"
                android:text="@string/activityContasAPagar_ButtonExcluir"
                android:background="@color/colorAccent"
                android:textColor="#FFF"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:onClick="buttonExcluir"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/button_Quitar"
                android:background="@color/colorPrimary"
                android:text="@string/activityContasAPagar_ButtonQuitar"
                android:textColor="#FFF"
                android:layout_marginStart="190dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:onClick="buttonQuitar"
                android:visibility="gone"
                />



        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
