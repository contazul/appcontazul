<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelecaoContaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_funcionalidade"
        android:text="@string/activitySelecaoConta_funcionalidade"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/button_criarconta"
        app:layout_constraintTop_toBottomOf="@+id/textView_funcionalidade"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/activitySelecaoConta_buttonCriarContazul"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:onClick="criarContazul"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE20"
        android:text="@string/activitySelacaoConta_RE_20"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/button_criarconta"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:textColor="@color/colorAccent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listaContas"
            app:layout_constraintTop_toBottomOf="@id/button_criarconta"
            android:layout_marginTop="110dp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>


