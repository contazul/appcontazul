<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_descricaoMovimentacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/listaSubtracaoSaldo_descricao"
            android:textSize="15sp"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_valorMovimentacao"
            android:text="@string/listaSubtracaoSaldo_valor"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Prioridade"
            android:text="@string/listaSubtracaoSaldo_prioridade"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>
</LinearLayout>
