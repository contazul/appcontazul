<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CadastroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_funcionalidade1"
        android:text="Cadastrar"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_NomeUsu"
            style="@style/editText"
            android:width="190dp"
            android:hint="Nome do UsuÃ¡rio"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE03_RE02_RE06"
        app:layout_constraintTop_toBottomOf="@+id/editText_NomeUsu"
        android:layout_marginTop="5sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_NomeUsu"
        android:textColor="#FF0000"
        android:text=""
        android:textSize="10sp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_SenhaUsu"
        style="@style/editText"
        android:width="190dp"
        android:hint="Senha"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="160dp"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRE05_RE07"
        app:layout_constraintTop_toBottomOf="@+id/editText_SenhaUsu"
        android:layout_marginTop="5sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_SenhaUsu"
        android:textColor="#FF0000"
        android:text=""
        android:textSize="10sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ConfSenha"
        style="@style/editText"
        android:width="190dp"
        android:hint="Confirmar Senha"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="220dp"
        android:inputType="textPassword"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRE08_RE04"
        app:layout_constraintTop_toBottomOf="@+id/editText_ConfSenha"
        android:layout_marginTop="5sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_ConfSenha"
        android:textColor="#FF0000"
        android:text=""
        android:textSize="10sp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_Cadastrar1"
        android:text="Cadastrar"
        app:layout_constraintTop_toBottomOf="@+id/editText_ConfSenha"
        app:layout_constraintLeft_toLeftOf="@+id/editText_ConfSenha"
        android:layout_marginTop="25dp"
        android:width="190dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:onClick="mostrarSucesso"
        android:layout_marginBottom="50dp"
        />
</android.support.constraint.ConstraintLayout>
</ScrollView>