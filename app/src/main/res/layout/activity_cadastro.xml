<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CadastroActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_funcionalidade1"
        android:text="Cadastrar"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="145sp"
        android:textColor="@color/colorPrimary"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_NomeUsu"
            style="@style/editText"
            android:width="190dp"
            android:hint="Nome do UsuÃ¡rio"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginStart="90dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_SenhaUsu"
        style="@style/editText"
        android:width="190dp"
        android:hint="Senha"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginStart="90dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ConfSenha"
        style="@style/editText"
        android:width="190dp"
        android:hint="Confirmar Senha"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="220dp"
        android:layout_marginStart="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_Cadastrar1"
        android:text="Cadastrar"
        app:layout_constraintTop_toBottomOf="@+id/editText_ConfSenha"
        app:layout_constraintLeft_toLeftOf="@+id/editText_ConfSenha"
        android:layout_marginTop="25dp"
        android:width="190dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:onClick="mostrarSucesso"/>





    />


</android.support.constraint.ConstraintLayout>