<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.CadastroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_funcionalidade1"
        android:text="@string/activityCadastro_textViewFuncionalidade"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorPrimary"/>

    <ProgressBar
        android:id="@+id/pbHeaderProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
    </ProgressBar>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_NomeUsu"
        style="@style/StyledTilEditTextTheme"
        android:hint="@string/activityCadastro_editTextNomeDoUsuario"
        android:layout_marginTop="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE03_RE02_RE06"
        android:layout_marginTop="5sp"
        android:textColor="#FF0000"
        android:layout_marginStart="70sp"
        android:layout_marginEnd="70sp"
        android:textSize="12sp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_SenhaUsu"
        style="@style/StyledTilEditTextTheme"
        android:hint="@string/activityCadastro_editTextSenha"
        android:textColor="@color/colorPrimary"
        android:inputType="textPassword"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRE05_RE07"
        android:textColor="#FF0000"
        android:layout_marginTop="5sp"
        android:text=""
        android:layout_marginStart="70sp"
        android:layout_marginEnd="70sp"
        android:textSize="12sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ConfSenha"
        style="@style/StyledTilEditTextTheme"
        android:hint="@string/activityCadastro_editTextConfirmarSenha"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRE08_RE04"
        android:layout_marginTop="5sp"
        android:textColor="#FF0000"
        android:text=""
        android:textSize="12sp"
        android:layout_marginStart="70sp"
        android:layout_marginEnd="70sp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_Cadastrar1"
        android:text="@string/activityCadastro_buttonCadastrar"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:onClick="mostrarSucesso"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="10dp"
        />


</LinearLayout>
</ScrollView>