<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SomaDeSaldoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_funcionalidade2"
        android:text="@string/activitySomaDeSaldo_funcionalidade"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10sp"
        android:textSize="15sp"
        android:layout_gravity="center"
        />

    <ProgressBar
        android:id="@+id/pbHeaderProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
    </ProgressBar>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_menu"
        android:layout_marginTop="10dp"
        android:text="@string/activityCentral_buttonMenu"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:onClick="contralMostrarMenu"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_somadesaldo"
        android:layout_marginTop="10dp"
        android:text="@string/activitySomaSaldoOpcaoIncluirSomaDeSaldo"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:onClick="trocarTela"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_lista_soma_de_saldo"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listaSaldoConta"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_incluir_soma_de_saldo"
        android:orientation="vertical"
        android:visibility="gone"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_SaldodaConta"
        android:text="@string/activitySomadeSaldo_textValorFormatado"
        android:layout_marginTop="30sp"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_DescricaoMovimentacao"
        android:hint="@string/activitySomaDeSaldo_editText_DescricaoMovimentacao"
        style="@style/StyledTilEditTextTheme"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE28"
        android:text=""
        android:layout_marginTop="5sp"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:textSize="10sp"
        android:textColor="#FF0000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityPerfilConta_textViewValorFormatado"
        android:text="@string/activitySomadeSaldo_textValorFormatado"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="5sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ValorDaMovimentacao"
        android:hint="@string/activitySomaDeSaldo_editText_ValorDaMovimentacao"
        android:inputType="number"
        style="@style/StyledTilEditTextTheme"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_RE29"
        android:text=""
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:textSize="10sp"
        android:textColor="#FF0000"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_InserirMovimentacao"
        android:text="@string/activitySomadeSaldo_button"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        android:onClick="buttonInserirMovimentacao"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        />
    </LinearLayout>

</LinearLayout>